generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 核心修改：补充 Account/Session 的反向关联字段
model User {
  id            String      @id @default(cuid())
  name          String?     @default("微信用户")
  wechatOpenId  String?     @unique
  wechatBindAt  DateTime?
  image         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  // 新增：反向关联 Account 模型（一对多）
  accounts      Account[]
  // 新增：反向关联 Session 模型（一对多）
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WechatVerifyCode {
  id        String   @id @default(cuid())
  openid    String   @unique
  code      String
  expires   DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
}